<div class="surfboard_page">
  <% if user_signed_in? %>

    <div class="navbar-cocktail" style="margin-top: 130px">
      <%= link_to "Add a new surfboard", new_surfboard_path, type: "button", class: "btn btn-primary mt-2" %>
    </div>
    <h1 style="font-family: 'Londrina Solid', cursive;" class="top-page">List of surfboards</h1>
    <div style="font-family: 'Pacifico', cursive;">
  <% else %>
    <%= link_to "Add a new surfboard", new_user_session_path, type: "button", class: "btn btn-primary mt-2" %>
  <% end %>
  </div>

  <div class="filter-cards">
    <%= form_with(url: surfboards_path, method: :get, local: true) do |form| %>
      <%= form.select :order, ["Price High to Low", "Price Low to High"] %>
      <%= select_tag 'surfboard_id', options_for_select(@surfboards.collect { |u| [u.location] }) %>
      <%= form.submit "Sort" %>
    <% end %>
    <%= form_tag import_surfboards_path, multipart: true, class: 'form-inline' do %>
      <div class="form-group">
        <%= link_to "Export CSV", surfboards_path(format: "csv"), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <div class="media">
      <div class="media-body">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Name</th>
            <th>Details</th>
            <th>Price</th>
            <th>Location</th>
          </tr>
          </thead>
          <tbody>
          <% @surfboards.each do |surfboard| %>
            <tr>
              <td><%= surfboard.name %></td>
              <td><%= surfboard.details %></td>
              <td><%= surfboard.price %></td>
              <td><%= surfboard.location %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <h3>Import Surfboards</h3>
    <%= form_tag import_surfboards_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "Upload Surfboards" %>
    <% end %>
  </div>
</div>
  </div>
  <div>
    <div class="album text-muted">
      <div class="container">
        <div class="row-index row">
<% @surfboards.each do |surfboard| %>
            <div class="col-sm-12 col-md-4 ">
              <div class="card-index">
                <a href="<%= surfboard_path(surfboard) %>">
<% if surfboard.photo.attached? %>
<%= cl_image_tag surfboard.photo.key, class: "card-image-index", height: 280, width: 322, crop: :fill %>
<% else %>
<%= image_tag "https://res.cloudinary.com/dhj0qswpc/image/upload/v1613696409/lqa75pzo9l9b3iqr83cjzq1iz9pm.jpg", width: '320', height: '280', class: "card-image-index" %>
<% end %>
                </a>
                <div style="height: 230px">
                  <h3>
                    <strong class="card-text_index" style="box-shadow: #2E2F30; font-family: 'Londrina Solid', cursive; color: #0E0000 "><%= surfboard.name %></strong>
                  </h3>
                  <div class="foot edit" style="background-color: #d4c8be">
                  </div>
                  <p><%= surfboard.details %></p>
                  <h5>Â£<%= surfboard.price %> per hour</h5>
                  <h5 style="height: 42px"><%= surfboard.location %></h5>
                </div>
              </div>
            </div>
<% end %>
        </div>
        <div class="row">
          <div class="col-md-12">
          </div>
        </div>
      </div>
    </div>

  <div id="map"
       style="width: 100%; height: 600px; position: relative; top: 160px;  border-radius: 15px 15px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>















