
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <div class="navbar navbar-left">
    <a href="<%= root_path %>" class= "navbar-brand">
      <%= image_tag "https://res.cloudinary.com/dhj0qswpc/image/upload/v1613676991/DudeBoardsLogo.png" %>
    </a>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active" id="search-bar"><%= form_tag surfboards_path, method: :get do |f| %>
          <%= text_field_tag :search, params[:search], placeholder: "Find your surfboard" %>
          <%= submit_tag 'Search' %>
        <% end %> </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.profile_pic.attached? %>
            <%= cl_image_tag current_user.profile_pic.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
          <% else %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/odayadli" , class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Home", root_path, class: "dropdown-item" %>
            <%= link_to "Listings", my_surfboards_surfboards_path, class: "dropdown-item" %>
            <%= link_to "Listings request", bookings_bookings_requests_path, class: "dropdown-item" %>
            <%= link_to "Manage my bookings", my_bookings_bookings_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
         <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link btn btn-info private log-in" %>
         </li>
      <% end %>
    </ul>
  </div>
</div>





